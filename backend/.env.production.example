# Configuration Backend PRODUCTION
NODE_ENV=production
PORT=5000

# Database Cloud (À CONFIGURER)
DB_HOST=your-db-host.example.com
DB_PORT=3306
DB_NAME=codm_community
DB_USER=your-db-user
DB_PASSWORD=your-secure-password

# JWT (GÉNÉRER DES CLÉS SÉCURISÉES)
# Utilisez: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERER_UNE_CLE_SECURISEE_64_CARACTERES
JWT_REFRESH_SECRET=GENERER_UNE_AUTRE_CLE_SECURISEE_64_CARACTERES
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# Client (URL de production)
CLIENT_URL=https://votre-domaine.com

# Rate Limiting (Plus strict en prod)
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=50

# Redis (optionnel mais recommandé)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
